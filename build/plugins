#! bin/bash

# Download and extract the required plugins
pluginDir=/var/www/html/wp-content/plugins

# BadgeOS
wget https://downloads.wordpress.org/plugin/badgeos.1.4.4.zip
unzip badgeos.1.4.4.zip
rm badgeos.1.4.4.zip
sudo mv badgeos $pluginDir

# BadgeOS BuddyPress Notifier
wget https://downloads.wordpress.org/plugin/badgeos-buddypress-notifier.zip
unzip badgeos-buddypress-notifier.zip
rm badgeos-buddypress-notifier.zip
sudo mv badgeos-buddypress-notifier $pluginDir

